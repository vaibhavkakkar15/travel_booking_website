<% layout('layouts/boilerplate.ejs') %>
<header class="row" id="heading">
  <div class="img-responsive" id="banner-image">
    <div class="home_header_info" id="header">
      <h1
        class="typewrite"
        data-period="2000"
        data-type='[ "HABIBI Come to India ", "Adventure awaits, go find it.", "Donâ€™t be a tourist, be a traveler.","Mountain Calling" ]'
      ></h1>
    </div>
  </div>
</header>


<link
  href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
  rel="stylesheet"
  id="bootstrap-css"
/>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<link
  rel="stylesheet"
  href="https://use.fontawesome.com/releases/v5.2.0/css/all.css"
  integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ"
  crossorigin="anonymous"
/>
<div class="container packages mt-5">
  <h3 class="pb-3 mb-4 font-italic border-bottom text-center mb-5">
    Explore Our Packages
  </h3>
  <div class="row">
    <% for(let item of packages){ %>
    <div class="col-md-6">
      <div class="card flex-md-row mb-4 shadow-sm h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
          <strong class="d-inline-block mb-2 text-primary"
            ><%=item.name%></strong
          >

          <div class="mb-1 text-muted small"><%=item.price%></div>
          <p class="card-text mb-auto" minlength="5" maxlength="25">
            <%=item.desc%>
          </p>
          <a
            class="btn btn-outline-primary btn-sm mt-4"
            role="button"
            href="/packages/<%=item._id%>"
            >Book Now</a
          >
        </div>
        <img
          class="card-img-right flex-auto d-none d-lg-block"
          alt="Thumbnail [200x250]"
          src="<%= item.img %>"
          style="width: 200px; height: 250px"
        />
      </div>
    </div>
    <% } %>
  </div>
  <section><%-include("../contact/contactus.ejs")%></section>
</div>
