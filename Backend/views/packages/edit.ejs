<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-6 mx-auto">
    <form action="/packages/<%=package._id%>?_method=PATCH" method="POST">
      <div class="mb-3">
        <label for="naam" class="form-label">Name: </label>
        <input
          type="text"
          class="form-control"
          name="name"
          id="naam"
          placeholder="Name of Product"
          value="<%=package.name%>"
        />
      </div>
      <div class="mb-3">
        <label for="imge" class="form-label">Image Url: </label>
        <input
          type="text"
          class="form-control"
          name="img"
          id="imge"
          placeholder="Image URL of Product"
          value="<%=package.img%>"
        />
      </div>
      <div class="mb-3">
        <label for="paisa" class="form-label">Price: </label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1">Rs. </span>
          <input
            class="form-control"
            type="number"
            name="price"
            id="paisa"
            placeholder="Price of Product"
            value="<%=package.price%>"
          />
        </div>
      </div>

      <div class="mb-3">
        <label for="des" class="form-label">Description: </label>
        <textarea
          class="form-control"
          name="desc"
          id="des"
          rows="5"
          placeholder="Description of Product"
        >
<%=package.desc%></textarea
        >
      </div>
      <button type="submit" class="btn btn-sm btn-success">Save Changes</button>
    </form>
  </div>
</div>
