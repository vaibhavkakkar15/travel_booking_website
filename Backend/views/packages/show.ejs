<% layout('layouts/boilerplate2.ejs') %>
<section id="pac">
  <div class="row container">
    <div class="col-md-6 sec mb-5">
      <div class="card" style="width: 18rem">
        <img src=" <%=package.img%> " class="card-img-top" />
        <div class="card-body booking">
          <h5 class="card-title text-light"><%= package.name %></h5>
          <a href="#" class="btn btn-primary">Add to Cart</a>
          <a href="/packages/new" class="btn btn-primary">Add Package</a>
          <a href="/packages/<%=package._id%>/edit" class="btn btn-success"
            >Edit</a
          >
          <form class="d-inline-block" action="/packages/<%=package._id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger btn-sm">Delete</button>
         </form>
        </div>
      </div>
    </div>

    <!-- booking ui -->
    <div class="col-mid-6 sec2 mb-5 mr-5">
      <div class="container mt-5 booking">
        <div class="card">
          <div class="card-header">Book Now</div>
          <div class="card-body">
            <form action="/booking" method="post">
              <div class="mb-3">
                <label for="start-date" class="form-label">Start Date</label>
                <input
                  type="date"
                  class="form-control"
                  id="start-date"
                  name="startDate"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="end-date" class="form-label">End Date</label>
                <input
                  type="date"
                  class="form-control"
                  id="end-date"
                  name="endDate"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="num-guests" class="form-label"
                  >Number of Guests</label
                >
                <input
                  type="number"
                  class="form-control"
                  id="num-guests"
                  name="numOfGuests"
                  min="1"
                  max="10"
                  required
                />
              </div>
              <button type="submit" class="btn btn-primary">Book Now</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- //Gallery -->
  <div class="container row">
    <h1 class="text-center mt-5 mb-5">Package description</h1>
    <p class="text-center"><%=package.longDesc%></p>
