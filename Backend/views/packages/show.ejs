  <div class="row" style="width:100%">
    <%if(currentUser && currentUser.role === 'seller'){%>
      <div class="functionalities">
         <button class="btn btn-primary"><a href="/packages/<%=package._id%>/edit"  class="text-light"
          >Edit</a
        ></button> 
        <form class="d-inline-block" action="/packages/<%=package._id%>?_method=DELETE" method="POST">
          <button class="btn btn-danger btn-sm">Delete</button>
       </form>
      </div>
      <%}%>
    <form action="/pay" method="post">
    <button class="btn btn-primary" type ="submit">Buy Package</button>
  </form>
  </div>
  <!-- long desc -->

  <div class="row" style="height:100vh; width:100%">
    <h1 class="display3">Description</h1>
    <p><%=package.longDesc%></p>
  </div>

  <!-- review section -->

    <div class="row rev">
      <h1 class="display-6 text-center">Leave Your Review</h1>
            
      <form action="/packages/<%=package._id%>/review" method="post">
          <div style="display:flex; justify-content: center; width:80% ; position: relative; left:100px;">
              <fieldset class="starability-basic">
                  <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="rating" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="rating" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="rating" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="rating" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="rating" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
          </div>
          <div class="mb-3" style="display:flex; justify-content: center; width:80% ; position: relative; left:100px;" >
              <label class="form-label" for="desc">Description</label>
              <textarea class="form-control" name="comment" id="desc" rows="2" width="500px"></textarea>
          </div>
          <button class="btn btn-success btn-sm" type="submit"  style="position: relative; left:700px;">Submit</button>
      </form>
      <div class="my-3">
          <%for(let review of package.reviews){%>
              <div class="card mb-3">
                  <div class="card-body">
                      <p class="starability-result" data-rating="<%=review.rating%>">
                          Rated: <%=review.rating%> stars
                      </p>
                      <p class="card-text"><%=review.comment%></p>
                      <button class="btn btn-danger btn-sm" style="position: relative; left:100px;">Delete</button>
                  </div>
              </div>
          <%}%>
      </div>
  </div>
  </div>
</section>
